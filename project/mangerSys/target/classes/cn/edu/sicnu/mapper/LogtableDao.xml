<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.sicnu.dao.LogtableDao">

    <resultMap type="cn.edu.sicnu.entity.Logtable" id="LogtableMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tableName" column="table_name" jdbcType="VARCHAR"/>
        <result property="bussinessName" column="bussiness_name" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.logtable (table_name, bussiness_name, create_time)
        values (#{tableName}, #{bussinessName}, #{createTime})
    </insert>
    <!--通过id删除数据-->
    <delete id="deleteById">
        delete
        from scientific_research.logtable
        where id = #{id}
    </delete>
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LogtableMap">
        select id,
               table_name,
               bussiness_name,
               create_time
        from scientific_research.logtable
                     limit #{offset}, #{limit}
    </select>
</mapper>