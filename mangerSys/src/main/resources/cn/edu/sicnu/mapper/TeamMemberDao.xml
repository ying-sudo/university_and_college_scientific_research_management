<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.sicnu.dao.TeamMemberDao">

    <resultMap type="cn.edu.sicnu.entity.TeamMember" id="TeamMemberMap">
        <result property="teamId" column="team_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="post" column="post" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TeamMemberMap">
        select team_id, user_id, post
        from scientific_research.team_member
        where team_id = #{teamId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TeamMemberMap">
        select team_id, user_id, post
        from scientific_research.team_member
                     limit #{offset}, #{limit}
    </select>
    <!--查询表所有对象-->
    <select id="findAll" resultMap="TeamMemberMap">
        select team_id, user_id, post
        from scientific_research.team_member
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TeamMemberMap">
        select
        team_id, user_id, post
        from scientific_research.team_member
        <where>
            <if test="teamId != null and teamId != ''">
                and team_id = #{teamId}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="post != null and post != ''">
                and post = #{post}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="teamId" useGeneratedKeys="true">
        insert into scientific_research.team_member (post)
        values (#{post})
    </insert>

    <insert id="insertBatch" keyProperty="teamId" useGeneratedKeys="true">
        insert into scientific_research.team_member(post)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.post})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="teamId" useGeneratedKeys="true">
        insert into scientific_research.team_member(post)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.post})
        </foreach>
        on duplicate key update
        post = values(post)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update scientific_research.team_member
        <set>
            <if test="post != null and post != ''">
                post = #{post},
            </if>
        </set>
        where team_id = #{teamId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from scientific_research.team_member
        where team_id = #{teamId}
    </delete>

</mapper>