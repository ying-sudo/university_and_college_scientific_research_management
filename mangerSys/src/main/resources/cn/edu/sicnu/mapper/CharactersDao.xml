<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.sicnu.dao.CharactersDao">

    <resultMap type="cn.edu.sicnu.entity.Characters" id="CharactersMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="note" column="note" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CharactersMap">
        select id, name, note
        from scientific_research.characters
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CharactersMap">
        select id, name, note
        from scientific_research.characters
                     limit #{offset}, #{limit}
    </select>
    <!--查询表所有对象-->
    <select id="findAll" resultMap="CharactersMap">
        select id, name, note
        from scientific_research.characters
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CharactersMap">
        select
        id, name, note
        from scientific_research.characters
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="note != null and note != ''">
                and note = #{note}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.characters (name, note)
        values (#{name}, #{note})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.characters(name, note)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.note})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.characters(name, note)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.note})
        </foreach>
        on duplicate key update
        name = values(name) , note = values(note)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update scientific_research.characters
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="note != null and note != ''">
                note = #{note},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from scientific_research.characters
        where id = #{id}
    </delete>
    <delete id="deleteByName">
        delete
        from scientific_research.characters
        where name = #{name}
    </delete>

</mapper>