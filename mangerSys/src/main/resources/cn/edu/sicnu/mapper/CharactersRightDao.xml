<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.sicnu.dao.CharactersRightDao">

    <resultMap type="cn.edu.sicnu.entity.CharactersRight" id="CharactersRightMap">
        <result property="characterId" column="character_id" jdbcType="VARCHAR"/>
        <result property="rightId" column="right_id" jdbcType="VARCHAR"/>
        <result property="note" column="note" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CharactersRightMap">
        select character_id, right_id, note
        from scientific_research.characters_right
        where character_id = #{characterId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CharactersRightMap">
        select character_id, right_id, note
        from scientific_research.characters_right
                     limit #{offset}, #{limit}
    </select>
    <!--查询表所有对象-->
    <select id="findAll" resultMap="CharactersRightMap">
        select character_id, right_id, note
        from scientific_research.characters_right
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="CharactersRightMap">
        select
        character_id, right_id, note
        from scientific_research.characters_right
        <where>
            <if test="characterId != null and characterId != ''">
                and character_id = #{characterId}
            </if>
            <if test="rightId != null and rightId != ''">
                and right_id = #{rightId}
            </if>
            <if test="note != null and note != ''">
                and note = #{note}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="characterId" useGeneratedKeys="true">
        insert into scientific_research.characters_right (note)
        values (#{note})
    </insert>

    <insert id="insertBatch" keyProperty="characterId" useGeneratedKeys="true">
        insert into scientific_research.characters_right(note)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.note})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="characterId" useGeneratedKeys="true">
        insert into scientific_research.characters_right(note)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.note})
        </foreach>
        on duplicate key update
        note = values(note)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update scientific_research.characters_right
        <set>
            <if test="note != null and note != ''">
                note = #{note},
            </if>
        </set>
        where character_id = #{characterId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from scientific_research.characters_right
        where character_id = #{characterId}
    </delete>

</mapper>