<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.sicnu.dao.EvaluationResultDao">

    <resultMap type="cn.edu.sicnu.entity.EvaluationResult" id="EvaluationResultMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="score" column="score" jdbcType="INTEGER"/>
        <result property="datename" column="datename" jdbcType="TIMESTAMP"/>
        <result property="sort" column="sort" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EvaluationResultMap">
        select id, score, datename, sort
        from scientific_research.evaluation_result
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EvaluationResultMap">
        select id, score, datename, sort
        from scientific_research.evaluation_result
                     limit #{offset}, #{limit}
    </select>
    <!--查询表所有对象-->
    <select id="findAll" resultMap="EvaluationResultMap">
        select id, score, datename, sort
        from scientific_research.evaluation_result
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EvaluationResultMap">
        select
        id, score, datename, sort
        from scientific_research.evaluation_result
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
            <if test="datename != null">
                and datename = #{datename}
            </if>
            <if test="sort != null and sort != ''">
                and sort = #{sort}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.evaluation_result (score, sort)
        values (#{score}, #{sort})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.evaluation_result(score, sort)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.score}, #{entity.sort})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into scientific_research.evaluation_result(score, sort)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.score}, #{entity.sort})
        </foreach>
        on duplicate key update
        score = values(score) , sort = values(sort)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update scientific_research.evaluation_result
        <set>
            <if test="score != null">
                score = #{score},
            </if>
            <if test="sort != null and sort != ''">
                sort = #{sort},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from scientific_research.evaluation_result
        where id = #{id}
    </delete>

</mapper>